pipeline {
    agent any
    stages{
        stage('Build'){
            steps {
                env.MAVEN_PATH='/Users/Shared/Documents/jenkins-tutorial/apache-maven-3.5.4/bin'
                sh '$MAVEN_PATH/mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}